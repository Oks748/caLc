        android:id="@+id/btnIs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#0e490f"
        android:fontFamily="@font/architects_daughter"
        android:onClick="onClickIs"
        android:text="="
